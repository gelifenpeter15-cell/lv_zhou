.container {
  padding: 30rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; /* Modern system font stack */
  min-height: 100vh;
  background-color: #F8F9FA; /* Light background for the whole page */
}

.header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #E9ECEF; /* Lighter border */
}

.title {
  font-size: 56rpx; /* Larger title */
  font-weight: 700; /* Bolder font weight */
  color: #34495E; /* Slightly darker, more sophisticated blue-grey */
}

.input-section, .itinerary-section {
  margin-bottom: 40rpx;
  padding: 35rpx;
  background-color: #FFFFFF; /* White background for cards */
  border-radius: 16rpx; /* More rounded corners */
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.07); /* Softer, larger shadow */
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
}

.input-group label {
  width: 220rpx; /* Slightly wider label */
  font-size: 32rpx;
  color: #555;
  margin-right: 25rpx;
  font-weight: 500; /* Medium font weight for labels */
}

.input-group input,
.input-group textarea,
.input-group .picker {
  flex-grow: 1;
  padding: 18rpx 25rpx;
  border: 1rpx solid #CED4DA; /* Lighter border for inputs */
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #fff; /* Ensure input background is white */
}

.input-group textarea {
  min-height: 120rpx;
  resize: vertical;
}

.picker {
  background-color: #fff; /* Match input background */
  position: relative; /* For potential icon placement */
}

/* Add a calendar icon to the picker */
.picker::after {
  content: 'ðŸ“…'; /* Simple emoji calendar icon */
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  color: #888;
}

.map-section {
  margin-bottom: 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.07);
  height: 750rpx; /* Significantly taller map */
}

.map-section map {
  width: 100%;
  height: 100%;
}

.route-planning {
  margin-top: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #E9ECEF;
}

.subtitle {
  font-size: 40rpx; /* Larger subtitle */
  font-weight: 700;
  color: #34495E;
}

.add-button {
  background-color: #50E3C2; /* Soft green accent */
  color: #34495E; /* Dark text for contrast */
  border: none;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  font-size: 48rpx;
  line-height: 80rpx;
  text-align: center;
  cursor: pointer;
  box-shadow: 0 4px 15px rgba(80, 227, 194, 0.4); /* Shadow matching accent color */
  display: flex;
  align-items: center;
  justify-content: center;
}

.itinerary-form {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #f9f9f9; /* Slightly off-white for form background */
  border-radius: 10rpx;
  border: 1rpx solid #E0E0E0; /* Lighter border */
}

.form-actions {
  display: flex;
  justify-content: space-between; /* Space out buttons */
  margin-top: 35rpx;
}

.action-button, .confirm-button {
  background-color: #4A90E2; /* Primary blue */
  color: white;
  padding: 22rpx 45rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
  cursor: pointer;
  flex: 1;
  margin: 0 10rpx;
  font-weight: 500;
  transition: background-color 0.2s ease; /* Smooth transition on hover/press */
}

.action-button:active, .confirm-button:active {
  background-color: #357ABD; /* Darker blue when pressed */
}

.cancel-button, .reset-button {
  background-color: #E0E0E0; /* Lighter gray for secondary actions */
  color: #333;
  padding: 22rpx 45rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 30rpx;
  cursor: pointer;
  flex: 1;
  margin: 0 10rpx;
  font-weight: 500;
  transition: background-color 0.2s ease;
}

.cancel-button:active, .reset-button:active {
  background-color: #C0C0C0; /* Darker gray when pressed */
}

.itinerary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #E9ECEF;
}

.itinerary-item:last-child {
  border-bottom: none;
}

.item-content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin-right: 25rpx;
}

.item-time {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 8rpx;
}

.item-title {
  font-size: 34rpx; /* Slightly larger title */
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.item-description {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5; /* Improved line spacing */
}

.item-actions {
  display: flex;
  gap: 12rpx;
}

.edit-button {
  background-color: #F5A623; /* Accent orange */
  color: white;
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.edit-button:active {
  background-color: #D9901F;
}

.delete-button {
  background-color: #E74C3C; /* Red for delete */
  color: white;
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.delete-button:active {
  background-color: #C0392B;
}

.no-itinerary {
  text-align: center;
  color: #AAA;
  font-style: italic;
  padding: 40rpx 0;
  font-size: 28rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #E9ECEF;
}
