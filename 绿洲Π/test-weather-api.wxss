/* 天气API测试页面样式 */
.test-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.test-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.test-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.test-status {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.status-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.status-value {
  font-size: 30rpx;
  font-weight: bold;
}

.status-value.success {
  color: #07c160;
}

.status-value.error {
  color: #ee0a24;
}

.status-value.unknown {
  color: #999;
}

.weather-info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.info-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.data-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.data-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #666;
}

.item-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.raw-data {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #e0e0e0;
}

.raw-json {
  font-size: 24rpx;
  color: #999;
  word-break: break-all;
  line-height: 1.5;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  display: block;
  margin-top: 10rpx;
}

.retry-btn {
  width: 100%;
  height: 88rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 16rpx;
  border: none;
  margin-top: 20rpx;
}

.retry-btn:active {
  background-color: #06ad56;
}
